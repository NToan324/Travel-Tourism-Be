{
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types/*"]
  },
  "include": ["src/**/*.ts", "./eslint.config.mjs", "src/helpers/_blank"],
  "exclude": ["node_modules", "dist"]
}
